<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">#000000</item>
        <!--<item name="android:background">@drawable/death</item>-->

        <!-- Material Dialog styling -->
        <item name="md_dark_theme">false</item>
        <item name="md_background_color">@android:color/black</item>
        <item name="md_icon">@drawable/icon
            <attr name="md_icon_max_size" format="dimension" />
            <attr name="md_icon_limit_icon_to_default_size" format="boolean" />
        </item>
        <item name="md_title_color">@android:color/white</item>
        <item name="md_content_color">@android:color/white</item>
        <item name="md_link_color">@android:color/black</item>
        <item name="md_positive_color">@android:color/white</item>
        <item name="md_neutral_color">@android:color/white</item>
        <item name="md_negative_color">#eeeeee</item>
        <item name="md_widget_color">@android:color/white</item>
        <item name="md_item_color">@android:color/white</item>
        <item name="md_divider_color">@android:color/black</item>
        <item name="md_btn_ripple_color">#000000</item>
        <item name="md_list_selector">@drawable/md_selector_dark</item>
        <item name="md_btn_stacked_selector">@drawable/md_selector</item>
        <item name="md_btn_positive_selector">@drawable/md_selector</item>
        <item name="md_btn_neutral_selector">@drawable/md_selector</item>
        <item name="md_btn_negative_selector">@drawable/md_selector</item>
        <item name="md_title_gravity">start</item>
        <item name="md_content_gravity">start</item>
        <item name="md_items_gravity">start</item>
        <item name="md_buttons_gravity">start</item>
        <item name="md_btnstacked_gravity">end</item>
        <item name="md_medium_font">Roboto-Bold.ttf</item>
        <item name="md_regular_font">Roboto-Light.ttf</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_light</item>
    </style>

    <style name="PrefsTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@drawable/black_trans_black</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
    </style>

    <style name="listViewPrefs" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/black_trans_black</item>
        <item name="android:cacheColorHint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"

        />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="menu_button_style">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">Menu button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:selectableItemBackground">?selectableItemBackground</item>
        <item name="android:selectable">?android:selectable</item>
    </style>

    <style name="menu_button_style_text" parent="autoScaleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="hangman_button_letter">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:selectableItemBackground">?selectableItemBackground</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="word_list_section_header">
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:selectableItemBackground">?selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Standard configuration for the AutoScaleTextView -->
    <style name="autoScaleTextView">

        <!-- use the next line to alter the minimum text size (uncomment first)-->
         <item name="@attr/minTextSize">10sp</item>
    </style>

    <style name="HintText">
        <item name="android:textSize">0sp</item>
    </style>

</resources>
