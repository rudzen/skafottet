<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/gallow"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start spil"
        android:id="@+id/StartBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="70dp"
        android:onClick="startClck"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instruktioner"
        android:id="@+id/InstrBtn"
        android:layout_below="@+id/StartBtn"
        android:layout_alignStart="@+id/StartBtn"
        android:layout_marginTop="27dp"
        android:onClick="instClck"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instillinger"
        android:id="@+id/InstilBtn"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/InstrBtn"
        android:onClick="instlClck"/>
</RelativeLayout>
