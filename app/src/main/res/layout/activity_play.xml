<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.undyingideas.thor.skafottet.Play">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/galgen"
        android:src="@mipmap/galge"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/synligtOrd"
        android:layout_below="@+id/galgen"
        android:layout_alignStart="@+id/galgen"
        android:layout_alignEnd="@+id/galgen" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gaet"
        android:layout_below="@+id/synligtOrd"
        android:layout_alignStart="@+id/synligtOrd"
        android:layout_marginTop="46dp"
        android:minWidth="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/InputBtn"
        android:layout_below="@+id/gaet"
        android:layout_alignStart="@+id/gaet"
        android:onClick="gaetClck"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usedLetters"
        android:layout_alignBottom="@+id/galgen"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/galgen"
        android:layout_below="@+id/Lulz" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De Morderiske Masser"
        android:id="@+id/Lulz"
        android:layout_alignTop="@+id/galgen"
        android:layout_toEndOf="@+id/galgen"
        android:alpha="8"
        android:autoText="true"
        android:textColor="#000000" />

    <ImageView
        style = "@style/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:baselineAlignBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:alpha="0.1" />
</RelativeLayout>
