<RelativeLayout android:id="@+id/menu_background"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/gallow"
                android:backgroundTint="@color/colorPrimaryDark"
                android:focusableInTouchMode="false"
                android:orientation="vertical"
                android:backgroundTintMode="multiply"
    >

    <com.undyingideas.thor.skafottet.views.StarField
        android:id="@+id/sf"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/dansemacabre"
        android:clickable="true"
        android:contentDescription="The title image"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/menu_image_logo"
        android:layout_alignEnd="@+id/menu_image_logo"/>

    <ImageView
        android:id="@+id/menu_cont_game"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_cont_game"
        android:clickable="true"
        android:contentDescription="New game button"
        android:cropToPadding="false"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/menu_title"
        android:layout_alignLeft="@+id/menu_multiplayer"
        android:layout_alignStart="@+id/menu_multiplayer"/>

    <ImageView
        android:id="@+id/menu_new_game"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_new_game"
        android:clickable="true"
        android:contentDescription="New game button"
        android:cropToPadding="false"
        android:layout_below="@+id/menu_cont_game"
        android:layout_alignLeft="@+id/menu_cont_game"
        android:layout_alignStart="@+id/menu_cont_game"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/menu_settings"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:clickable="true"
        android:background="@drawable/button_settings"
        android:contentDescription="Settings button"
        android:cropToPadding="false"
        android:layout_gravity="center"
        android:layout_below="@+id/menu_word_lists"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/menu_word_lists"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_word_lists"
        android:clickable="true"
        android:contentDescription="Options button"
        android:layout_gravity="center"
        android:layout_below="@+id/menu_multiplayer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/menu_multiplayer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_multiplayer"
        android:clickable="true"
        android:contentDescription="Options button"
        android:layout_gravity="center"
        android:layout_below="@+id/menu_new_game"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/menu_help"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_help"
        android:clickable="true"
        android:contentDescription="Help button"
        android:layout_gravity="center"
        android:layout_below="@+id/menu_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/menu_quit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_quit"
        android:clickable="true"
        android:contentDescription="Quit button"
        android:layout_gravity="center"
        android:layout_below="@+id/menu_help"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/menu_image_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="Logo"
        android:background="@drawable/rip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>