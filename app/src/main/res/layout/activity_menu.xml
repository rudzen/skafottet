<RelativeLayout
    android:id="@+id/menu_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".activities.MenuActivity"
    xmlns:marquee="http://schemas.android.com/apk/res-auto">

    <com.undyingideas.thor.skafottet.views.StarField
        android:id="@+id/sf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        />
    <!--android:background="#00ffffff"-->

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="@string/contentDescriptionMenuTitle"
        android:text="Skafottet"
        android:padding="10dp"
        android:typeface="serif"
        android:textAlignment="center"
        android:textSize="150sp"
        android:alpha="0.9"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="25dp"/>

    <!--<ImageView-->
        <!--android:id="@+id/menu_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:background="@drawable/title_text"-->
        <!--android:clickable="true"-->
        <!--android:contentDescription="@string/contentDescriptionMenuTitle"-->
        <!--/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/menu_button_play"
            style="@style/menu_button_style"
            android:layout_marginTop="125dp"
            android:background="@drawable/button_play"
            android:contentDescription="@string/contentDescriptionMenuButtonPlay"/>

        <ImageView
            android:id="@+id/menu_button_highscore"
            style="@style/menu_button_style"
            android:background="@drawable/button_highscore"
            android:contentDescription="@string/contentDescriptionMenuHighscore"/>

        <ImageView
            android:id="@+id/menu_button_word_lists"
            style="@style/menu_button_style"
            android:background="@drawable/button_ordlister"
            android:contentDescription="@string/contentDescriptionMenuWordLists"/>

        <ImageView
            android:id="@+id/menu_button_settings"
            style="@style/menu_button_style"
            android:background="@drawable/button_settings"
            android:contentDescription="@string/contentDescriptionMenuSettings"/>

        <ImageView
            android:id="@+id/menu_button_about"
            style="@style/menu_button_style"
            android:background="@drawable/button_about"
            android:contentDescription="@string/contentDescriptionMenuAbout"/>

        <ImageView
            android:id="@+id/menu_button_help"
            style="@style/menu_button_style"
            android:background="@drawable/button_help"
            android:contentDescription="@string/contentDescriptionMenuHelp"/>

        <ImageView
            android:id="@+id/menu_button_login_out"
            style="@style/menu_button_style"
            android:background="@drawable/button_login"
            android:contentDescription="@string/contentDescriptionMenuLogInOut"/>

        <ImageView
            android:id="@+id/menu_button_quit"
            style="@style/menu_button_style"
            android:layout_marginBottom="75dp"
            android:background="@drawable/button_end"
            android:contentDescription="@string/contentDescriptionMenuQuit"/>

        <LinearLayout
            android:id="@+id/LoginLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            >

            <asia.ivity.android.marqueeview.MarqueeView
                android:id="@+id/marqueeView150"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                marquee:speed="4"
                marquee:pause="1000"
                marquee:autoStart="true"
                >

                <TextView
                    android:id="@+id/menu_login_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:clickable="false"
                    tools:ignore="HardcodedText"/>
            </asia.ivity.android.marqueeview.MarqueeView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>