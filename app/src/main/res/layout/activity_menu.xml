<RelativeLayout android:id="@+id/menu_background"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/gallow"
                android:backgroundTint="@color/colorPrimaryDark"
                android:focusableInTouchMode="false"
                android:orientation="vertical"
                android:backgroundTintMode="multiply"
    >

    <com.undyingideas.thor.skafottet.views.StarField
        android:id="@+id/sf"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="#00ffffff"/>

    <ImageView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/title_text"
        android:clickable="true"
        android:contentDescription="The title image"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/menu_image_logo"
        android:layout_alignEnd="@+id/menu_image_logo"/>

    <ImageView
        android:id="@+id/menu_image_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="Logo"
        android:background="@drawable/game_end_lost"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/menu_title">

        <ImageView
            android:id="@+id/menu_button_play"
            android:background="@drawable/button_play"
            style="@style/menu_button_style"/>

        <ImageView
            android:id="@+id/menu_button_highscore"
            android:background="@drawable/button_highscore"
            style="@style/menu_button_style"/>

        <ImageView
            android:id="@+id/menu_button_word_lists"
            android:background="@drawable/button_ordlister"
            style="@style/menu_button_style"/>

        <ImageView
            android:id="@+id/menu_button_settings"
            android:background="@drawable/button_settings"
            style="@style/menu_button_style"/>

        <ImageView
            android:id="@+id/menu_button_about"
            android:background="@drawable/button_about"
            style="@style/menu_button_style"/>

        <ImageView
            android:id="@+id/menu_button_help"
            android:background="@drawable/button_help"
            style="@style/menu_button_style"/>

        <ImageView
            android:id="@+id/menu_button_quit"
            android:background="@drawable/button_end"
            style="@style/menu_button_style"/>

    </LinearLayout>

</RelativeLayout>