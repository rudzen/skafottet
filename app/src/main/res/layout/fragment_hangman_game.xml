<LinearLayout
    android:id="@+id/what"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_trans_black"
    android:orientation="vertical"
    android:weightSum="12.4"
    tools:context=".activities.GameActivity"
    tools:ignore="HardcodedText"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <com.undyingideas.thor.skafottet.views.camera.Hangman3dView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutStatus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:alpha="100"
            android:text="Spilstatus"
            android:textSize="10sp"
            android:textStyle="bold|italic"/>

        <View
            android:id="@+id/sepStatus"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_seperator_gradient"
            />

        <com.hanks.htextview.HTextView
            android:id="@+id/hangman_game_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutKnownWords"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:alpha="100"
            android:text="Kendte bogstaver"
            android:textSize="10sp"
            android:textStyle="bold|italic"/>

        <View
            android:id="@+id/sepKnown"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_seperator_gradient"
            />

        <com.hanks.htextview.HTextView
            android:id="@+id/hangman_game_known_letters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            style="@style/hangman_button_letter"
            android:text="a"
            />

        <Button
            android:id="@+id/button2"
            style="@style/hangman_button_letter"
            android:text="b"
            />

        <Button
            android:id="@+id/button3"
            style="@style/hangman_button_letter"
            android:text="c"
            />

        <Button
            android:id="@+id/button4"
            style="@style/hangman_button_letter"
            android:text="d"

            />

        <Button
            android:id="@+id/button5"
            style="@style/hangman_button_letter"
            android:text="e"
            />

        <Button
            android:id="@+id/button6"
            style="@style/hangman_button_letter"
            android:text="f"
            />

        <Button
            android:id="@+id/button7"
            style="@style/hangman_button_letter"
            android:text="g"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button8"
            style="@style/hangman_button_letter"
            android:text="h"

            />

        <Button
            android:id="@+id/button9"
            style="@style/hangman_button_letter"
            android:text="i"
            />

        <Button
            android:id="@+id/button10"
            style="@style/hangman_button_letter"
            android:text="j"
            />

        <Button
            android:id="@+id/button11"
            style="@style/hangman_button_letter"
            android:text="k"
            />

        <Button
            android:id="@+id/button12"
            style="@style/hangman_button_letter"
            android:text="l"
            />

        <Button
            android:id="@+id/button13"
            style="@style/hangman_button_letter"
            android:text="m"
            />

        <Button
            android:id="@+id/button14"
            style="@style/hangman_button_letter"
            android:text="n"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button15"
            style="@style/hangman_button_letter"
            android:text="o"
            />

        <Button
            android:id="@+id/button16"
            style="@style/hangman_button_letter"
            android:text="p"
            />

        <Button
            android:id="@+id/button17"
            style="@style/hangman_button_letter"
            android:text="q"
            />

        <Button
            android:id="@+id/button18"
            style="@style/hangman_button_letter"
            android:text="r"
            />

        <Button
            android:id="@+id/button19"
            style="@style/hangman_button_letter"
            android:text="s"
            />

        <Button
            android:id="@+id/button20"
            style="@style/hangman_button_letter"
            android:text="t"
            />

        <Button
            android:id="@+id/button21"
            style="@style/hangman_button_letter"
            android:text="u"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button22"
            style="@style/hangman_button_letter"
            android:text="v"/>

        <Button
            android:id="@+id/button25"
            style="@style/hangman_button_letter"
            android:text="y"
            />

        <Button
            android:id="@+id/button24"
            style="@style/hangman_button_letter"
            android:text="x"
            />

        <Button
            android:id="@+id/button26"
            style="@style/hangman_button_letter"
            android:text="z"
            />

        <Button
            android:id="@+id/button23"
            style="@style/hangman_button_letter"
            android:text="æ"
            />

        <Button
            android:id="@+id/button27"
            style="@style/hangman_button_letter"
            android:text="ø"
            />

        <Button
            android:id="@+id/button28"
            style="@style/hangman_button_letter"
            android:text="å"
            />
    </LinearLayout>

</LinearLayout>
