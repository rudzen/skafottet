<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.undyingideas.thor.skafottet"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:isGame="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".game_ui.LoadingActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".game_ui.wordlist.WordDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".game_ui.wordlist.WordFragmentLayout"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".game_ui.GameActivity"
            android:parentActivityName=".game_ui.LoadingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".game_ui.main_menu.MenuActivity"/>
        <activity
            android:name=".game_ui.hichscorecontent.PlayerListActivity"
            android:label="@string/title_player_list"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".game_ui.hichscorecontent.PlayerDetailActivity"
            android:label="@string/title_player_detail"
            android:parentActivityName=".game_ui.hichscorecontent.PlayerListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".game_ui.hichscorecontent.PlayerListActivity"/>
        </activity>
    </application>

</manifest>
