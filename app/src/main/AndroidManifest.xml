<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.undyingideas.thor.skafottet"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:isGame="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".game_ui.LoadingActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".wordlist.WordDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".wordlist.WordFragmentLayout"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Instructions"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Preferences"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity_high_score"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".game_ui.MainActivity"
            android:parentActivityName=".game_ui.LoadingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"/>
        <activity android:name=".game_ui.main_menu.MenuActivity"/>
        <activity
            android:name=".MultiplayerTest"
            android:label="@string/title_activity_multiplayer_test"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".MultiplayerTestLobby"
            android:label="Test lobby"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".game_ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".game_ui.main_menu.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.undyingideas.thor.skafottet.game_ui.main_menu.MenuActivity"/>
        </activity>
        <activity
            android:name=".game_ui.hichscorecontent.PlayerListActivity"
            android:label="@string/title_player_list"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".game_ui.hichscorecontent.PlayerDetailActivity"
            android:label="@string/title_player_detail"
            android:parentActivityName=".game_ui.hichscorecontent.PlayerListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".game_ui.hichscorecontent.PlayerListActivity"/>
        </activity>
    </application>

</manifest>
